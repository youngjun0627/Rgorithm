   "source": [
    "def solution(n):\n",
    "    answer=0\n",
    "    arr=[]\n",
    "    while n>=1:\n",
    "        q, r = divmod(n,3)\n",
    "        n=q\n",
    "        arr.append(r)\n",
    "    i=1\n",
    "    for a in arr[::-1]:\n",
    "        answer+=a*i\n",
    "        i*=3\n",
    "    return answer\n",
    "\n"
   ]
